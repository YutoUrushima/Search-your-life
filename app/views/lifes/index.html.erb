<div class="row">
    <div class="col-md-14">
        <% @lifes.each do |life| %>
            <% if life.name %>
                <%= link_to life_path(life), class: "card" do %>
                    <div class="card-body">
                        <p>名前：<%= life.name %></p>
                        <p>誕生年：<%= life.year %></p>
                        <p>誕生月：<%= life.month %></p>
                        <p>誕生日：<%= life.date %></p>
                        <p>自己紹介：<%= life.introduce %></p>
                        <p>メール：<%= life.mail %></p>
                        <img src="<%= life.image != nil ? "/user_images/#{life.id}.jpg" : "/user_images/default.jpg" %>">
                    </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>
