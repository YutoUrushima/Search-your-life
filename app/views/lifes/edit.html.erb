 <div class="mt-5">
    <%= form_with model: @life, :url => {:action => :update }, multipart: true, local: true do |f| %>
        <div class="form-group">
            <label>Name</label>
            <%= f.text_field :name, value: @life.name, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Year</label>
            <%= f.number_field :year, value: @life.year, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Month</label>
            <%= f.number_field :month, value: @life.month, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Date</label>
            <%= f.number_field :date, value: @life.date, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Introduce</label>
            <%= f.text_area :introduce, value: @life.introduce, class: "form-control" %>
        </div>
        <div class="form-group">
            <label>Image</label>
            <%= f.file_field :image, value: @life.image, class: "form-control" %>
        </div>
        <div class="text-center">
            <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
    <% end %>
 </div>