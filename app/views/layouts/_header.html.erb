<header class="bg-primary d-flex justify-content-between align-items-center">
  <h2 class="p-2">
    <%= link_to "Search your life", root_path, class: "text-white text-decoration-none site-title" %>
  </h2>
  <nav>
    <ul class="pr-5 mb-0 d-flex align-items-center">
      <% if @current_user %>
        <div>
          <%= link_to "マイページ", "/lifes/#{@current_user}", class: "text-white" %>
        </div>
        <div class="ml-2">
          <%= link_to "ログアウト", logout_path, class: "text-white", method: :post %>
        </div>
      <% else %>
      <% if request.path_info != "/login" %>
        <p class="mb-0">
          <%= link_to "ログイン", login_path, class: "text-white" %>
        </p>
      <% end %>
        <p class="ml-4 mb-0">
          <%= link_to "新規登録", new_life_path, class: "text-white" %>
        </p>
      <% end %>
    </ul>
  </nav>
</header>