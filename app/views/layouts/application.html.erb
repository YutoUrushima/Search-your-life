<!DOCTYPE html>
<html>
  <head>
    <title>Search your life</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <!--flash部分-->
    <% flash.each do |message_type, message| %>
      <p class="text-primary">
        <%= message %>
      </p>
    <% end %>
    <!--flash部分-->
    
    <div class="bg-primary d-flex justify-content-between align-items-center">
      <h2 class="p-2">
        <%= link_to "Search your life", root_path, class: "text-white text-decoration-none" %>
      </h2>
      <div class="pr-5 d-flex align-items-center">
        <% if @current_user %>
            <div>
              <%= link_to "id: #{@current_user}", "/lifes/#{@current_user}", class: "text-white" %>
            </div>
            <div class="ml-2">
              <%= link_to "logout", logout_path, class: "text-white", method: :post %>
            </div>
        <% else %>
            <p>
              <%= link_to "login", login_path, class: "text-white" %>
            </p>
            <p class="ml-2">
              <%= link_to "新規登録", new_life_path, class: "text-white" %>
            </p>
        <% end %>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
