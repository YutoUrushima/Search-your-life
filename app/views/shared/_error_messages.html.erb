<% if @life.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            エラーが<%= @life.errors.count %>個あります。
        </div>
        <ul>
            <% @life.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>